@author Mai, Jiacheng
function: layout for single castle info panel
modification date and description can be found in github repository history
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CastleFragment.PanelOverCastleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/castle_picture"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/castle_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="monospace"
                    android:text="@string/alnwic_castle"
                    android:textColor="#6200EE"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/icons8_two_tickets_32" />

                    <TextView
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:duplicateParentState="false"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="none"
                        android:shadowColor="@color/white"
                        android:singleLine="false"
                        android:text="@string/ticket"
                        android:textColor="#585859"
                        android:textColorHighlight="#6FB5FF"
                        android:textColorLink="#6FB5FF"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded"
                        android:importantForAutofill="no" />

                    <TextView
                        android:id="@+id/ticket_value"
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:duplicateParentState="false"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="none"
                        android:shadowColor="@color/white"
                        android:singleLine="false"
                        android:text="@string/_1890"
                        android:textColor="#6FB5FF"
                        android:textColorHighlight="#6FB5FF"
                        android:textColorLink="#6FB5FF"
                        android:textSize="14sp"
                        android:importantForAutofill="no" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_baseline_location_on_24" />

                    <TextView
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="none"
                        android:shadowColor="@color/white"
                        android:singleLine="false"
                        android:text="@string/location"
                        android:textColor="#585859"
                        android:textColorHighlight="#6FB5FF"
                        android:textColorLink="#6FB5FF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/castleLocation"
                        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="none"
                        android:shadowColor="@color/white"
                        android:singleLine="false"
                        android:text="Brut - BBBB-BBBB"
                        android:textColor="#6FB5FF"
                        android:textColorHighlight="#6FB5FF"
                        android:textColorLink="#6FB5FF"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="monospace"
                    android:text="@string/brief"
                    android:textColor="#585859"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/brief_intro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:duplicateParentState="false"
                        android:ems="10"
                        android:padding="5dp"
                        android:shadowColor="@color/white"
                        android:singleLine="false"
                        android:text="@string/welcome_to_bamburgh"
                        android:textAlignment="viewStart"
                        android:textColor="#131313"
                        android:textColorHighlight="#6FB5FF"
                        android:textColorLink="#6FB5FF"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="monospace"
                    android:text="@string/opening_times"
                    android:textColor="#585859"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:layout_marginBottom="15dp"/>


                <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="#6FB5FF"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:textColor="@color/white"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="Open Time"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="Last Entrance Time"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="Close Time"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:background="#6FB5FF"
                            android:text="@string/time"
                            android:gravity="center|left"
                            android:paddingLeft="20dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/Open_time"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="TextView"/>
                        <TextView
                            android:id="@+id/last_entrance_time"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="TextView"/>
                        <TextView
                            android:id="@+id/close_time"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:padding="5dp"
                            android:text="TextView"/>

                    </LinearLayout>

                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_margin="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/more_about_castle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="more details" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>